<!doctype html>
<html lang="en">

<head>
    <title>QR Code Generator</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Montserrat:wght@500&display=swap');

        * {
            font-family: Montserrat;
        }

        .card {
            margin: 0 auto;
            float: none;
            margin-bottom: 10px;
        }

        .navbar {
            position: relative;
            display: -ms-flexbox;
            display: flex;
            -ms-flex-wrap: wrap;
            flex-wrap: wrap;
            -ms-flex-align: center;
            align-items: center;
            -ms-flex-pack: justify;
            justify-content: center;
            padding: 0.5rem 1rem;
        }

        .navbar a {
            margin: 0.15rem;
        }
    </style>
</head>

<body>


    <div class="container">
        <br>
        <h1 class="text-center">QR CODE GENERATOR</h1>
        <hr>
        <div class="navbar">
            <a class="btn btn-primary" href="/">Structure</a>
            <a class="btn btn-primary" href="/custom">Custom</a>
        </div>
        <div class="row mb-3">
            <aside class="col-sm-12 text-center">
                <div class="card">
                    <article class="card-body">
                        <hr>
                        <p class="text-success text-center">Please Enter All fields and press Generate!</p>
                        <form action="/scan" method="POST">
                            <div class="form-group">
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"> <i class="fa fa-pencil"></i> </span>
                                    </div>
                                    <input name="Company-Name" class="form-control" placeholder="Company Name"
                                        type="text" required>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"> <i class="fa fa-pencil"></i> </span>
                                    </div>
                                    <input name="Batch-Number" class="form-control" placeholder="Batch Number"
                                        type="text" required>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"> <i class="fa fa-pencil"></i> </span>
                                    </div>
                                    <input name="Manufacturing-Date" class="form-control"
                                        placeholder="Manufacturing Date" type="text" required>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"> <i class="fa fa-pencil"></i> </span>
                                    </div>
                                    <input name="Expire-Date" class="form-control" placeholder="Expire Date" type="text"
                                        required>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"> <i class="fa fa-pencil"></i> </span>
                                    </div>
                                    <input name="Price" class="form-control" placeholder="Price" type="text" required>
                                </div>
                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn btn-primary btn-block" value="Get QR">Generate</button>
                            </div>
                        </form>
                    </article>
                </div>

            </aside>
        </div>
    </div>

</body>

</html>